{
  "manifest_version": 2,
  "name": "Slack Custom Emoji Manager",
  "short_name": "Emoji Manager",
  "description": "Management to slack's custom emoji.",
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icon24.png"
    }
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "css": ["main.css"],
      "matches": ["*://*.slack.com/*/emoji*"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["webRequest", "webRequestBlocking", "*://emoji.slack-edge.com/", "*://slack.com/api/"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
