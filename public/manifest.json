{
  "manifest_version": 2,
  "name": "__MSG_ext_name__",
  "short_name": "__MSG_ext_short_name__",
  "description": "__MSG_ext_desc__",
  "version": "1.1",
  "default_locale": "en",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icon24.png"
    }
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "css": ["main.css"],
      "matches": ["*://*.slack.com/*/emoji*"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": ["index.html"],
  "permissions": ["webRequest", "*://emoji.slack-edge.com/", "*://*.slack.com/api/"]
}
