{
  "manifest_version": 2,
  "name": "Slack Custom Emoji Manager",
  "short_name": "Slack Custom Emoji Manager",
  "description": "Slackに絵文字の追加、削除、ダウンロードをする機能を追加します",
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icon24.png"
    }
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "css": ["main.css"],
      "matches": ["*://*.slack.com/*/emoji*"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": ["index.html"],
  "permissions": ["webRequest", "*://emoji.slack-edge.com/", "*://*.slack.com/api/"]
}
